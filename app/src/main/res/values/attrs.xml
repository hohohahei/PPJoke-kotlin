<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RecordView">
        <attr name="progress_color" format="color" />
        <attr name="progress_width" format="dimension" />
        <attr name="fill_color" format="color" />
        <attr name="radius" format="dimension" />
        <attr name="duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="MyTextItemView">
        <attr name="tv_title" format="string"/>
        <attr name="tv_hint" format="string"/>
        <attr name="tv_titleTextSize" format="dimension"/>
        <attr name="isShowDivider" format="boolean"/>
        <attr name="isHintMode" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MyEditTextItemView">
        <attr name="tv_title" />
        <attr name="edt_hint" format="string" />
        <attr name="android:inputType" />
        <attr name="tv_titleTextSize" />
        <attr name="isShowDivider" />
        <attr name="isShowDel" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="MyImageItemView">
        <attr name="tv_title" />
        <attr name="tv_titleTextSize" />
        <attr name="isShowDivider" />
        />
    </declare-styleable>

    <string-array name="spinner_more_item">
        <item>删除</item>
    </string-array>

    <declare-styleable name="view_offset_behavior">
        <attr name="anchor_gravity" format="enum">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <attr name="scroll_follow" format="boolean" />
        <attr name="anchor_id" format="integer" />
    </declare-styleable>

    <declare-styleable name="view_anchor_behavior">
        <attr name="anchorId" format="integer" />
    </declare-styleable>

    <declare-styleable name="view_zoom_behavior">
        <attr name="min_height" format="dimension" />
        <attr name="scrolling_id" format="integer" />
    </declare-styleable>

    <declare-styleable name="viewOutLineStrategy">
        <attr name="clip_radius" format="dimension"></attr>
        <attr name="clip_side" format="enum">
            <enum name="all" value="0"></enum>
            <enum name="left" value="1"></enum>
            <enum name="top" value="2"></enum>
            <enum name="right" value="3"></enum>
            <enum name="bottom" value="4"></enum>
        </attr>
    </declare-styleable>

</resources>